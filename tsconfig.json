{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "jsx": "react",
    "strictNullChecks": true,
    "importHelpers": true,
    "rootDirs": ["./src/", "./test/", "./demo/"]
  },
  "include": ["./src/**/*", "./demo/**/*"],
  "exclude": ["node_modules", "./test/**/*"]
}
